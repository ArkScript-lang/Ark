{
    (let take (fun (n L) {
        (mut idx 0)
        (mut output [])
        (while (and (< idx n) (< idx (len L))) {
            (set output (append output (@ L idx)))
            (set idx (+ 1 idx))
        })
        output
    }))

    (let drop (fun (n L) {
        (mut idx n)
        (mut output [])
        (while (< idx (len L)) {
            (set output (append output (@ L idx)))
            (set idx (+ 1 idx))
        })
        output
    }))
}