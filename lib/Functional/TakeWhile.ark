(let takeWhile (fun (f L) {
    (mut idx 0)
    (mut output [])
    (mut continue true)

    (while (and (< idx (len L)) continue) {
        (if (f (@ L idx))
            {
                (set output (append output (@ L idx)))
                (set idx (+ 1 idx))
            }
            (set continue false)
        )
    })
    output
}))