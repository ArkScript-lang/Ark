{
    (let misc-tests (fun () {
        (mut tests 0)

        (assert (= 12 (toNumber "12")) "Misc test 1 failed")        (set tests (+ 1 tests))
        (assert (= 12.5 (toNumber "12.5")) "Misc test 1°2 failed")  (set tests (+ 1 tests))

        (assert (= nil nil) "Misc test 2 failed")           (set tests (+ 1 tests))
        (assert (= true (= 1 1)) "Misc test 2°2 failed")    (set tests (+ 1 tests))
        (assert (= false (= 1 2)) "Misc test 2°3 failed")   (set tests (+ 1 tests))

        (assert (and true true) "Misc test 3 failed")               (set tests (+ 1 tests))
        (assert (= false (and true false)) "Misc test 3°2 failed")  (set tests (+ 1 tests))
        (assert (= false (and false true)) "Misc test 3°3 failed")  (set tests (+ 1 tests))
        (assert (= false (and false false)) "Misc test 3°4 failed") (set tests (+ 1 tests))

        (assert (or true true) "Misc test 4 failed")                (set tests (+ 1 tests))
        (assert (or true false) "Misc test 4°2 failed")             (set tests (+ 1 tests))
        (assert (or false true) "Misc test 4°3 failed")             (set tests (+ 1 tests))
        (assert (= false (or false false)) "Misc test 4°4 failed")  (set tests (+ 1 tests))

        (let a nil)
        (let closure (fun (&a) ()))

        (assert (= "Number" (type 1)) "Misc test 5 failed")                 (set tests (+ 1 tests))
        (assert (= "List" (type [])) "Misc test 5°2 failed")                (set tests (+ 1 tests))
        (assert (= "String" (type "")) "Misc test 5°3 failed")              (set tests (+ 1 tests))
        (assert (= "Function" (type misc-tests)) "Misc test 5°4 failed")    (set tests (+ 1 tests))
        (assert (= "Bool" (type true)) "Misc test 5°5 failed")              (set tests (+ 1 tests))
        (assert (= "Bool" (type false)) "Misc test 5°6 failed")             (set tests (+ 1 tests))
        (assert (= "Nil" (type nil)) "Misc test 5°7 failed")                (set tests (+ 1 tests))
        (assert (= "CProc" (type list)) "Misc test 5°8 failed")             (set tests (+ 1 tests))
        (assert (= "Closure" (type closure)) "Misc test 5°9 failed")        (set tests (+ 1 tests))

        (assert (= true (hasField closure "a")) "Misc test 6 failed")       (set tests (+ 1 tests))
        (assert (= false (hasField closure "b")) "Misc test 6°2 failed")    (set tests (+ 1 tests))

        (assert (= false (nil? 0)) "Misc test 7 failed")        (set tests (+ 1 tests))
        (assert (nil? nil) "Misc test 7°2 failed")              (set tests (+ 1 tests))
        (assert (= false (nil? [])) "Misc test 7°3 failed")     (set tests (+ 1 tests))
        (assert (= false (nil? "")) "Misc test 7°4 failed")     (set tests (+ 1 tests))

        (let start-sleep (time))
        (sleep 350)
        (let diff-sleep (- (time) start-sleep))
        (assert (and (>= diff-sleep 0.330) (<= diff-sleep 0.375)) "Misc test 8 failed")  # using a range of value since sleep can't be accurate
        (set tests (+ 1 tests))

        (assert (= "A bear walked up 20 miles and saw an eagle." (format "{0} walked up {1} miles and saw {2}." "A bear" 20 "an eagle")) "Misc test 9 failed")
        (set tests (+ 1 tests))
        (assert (= "Hello world" (format "Hello world")) "Misc test 9°2 failed")
        (set tests (+ 1 tests))
    
        (print "  Misc tests passed \t\t(" tests ")")
        tests
    }))

    (let passed-misc (misc-tests))
}