{
    ' jeu du plus ou moins
    (print "Jeu du plus ou moins !")

    (import "librandom.so")

    (let r (random))
    (print r)
    (let value 0)
    (let essais 0)

    (let continue true)

    (while continue {
        (set value (toNumber (input "Entrez une valeur numérique: ")))

        (if (< value r)
            ' then
            (print "C'est plus !")
            ' else
            (if (= value r)
                ' then
                { (print "Gagné !") (set continue false) }
                ' else
                (print "C'est moins !")
            )
        )

        (set essais (+ 1 essais))
    })

    (print "Vous avez gagné en" essais "essais")
}