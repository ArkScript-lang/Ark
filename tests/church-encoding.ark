{
    (let create-human (fun (name age weight) {
        (let set-age (fun (new) (set age new)))

        # return value as higher order function to manipulate the data above
        # this will be our "constructor"
        (fun (new-age &set-age &name &age &weight) {
            (if (!= nil new-age)
                # just testing the setter
                (set-age new-age) ()
            )
        })
    }))

    (let bob (create-human "Bob" 0 144))
    (let john (create-human "John" 12 15))

    (print bob.age)
    (bob 10)
    # nota bene: currently, (bob.set-age 10) wouldn't work because it needs
    # to use the scope of 'bob'
    (print bob.age)

    (print john.age)
}