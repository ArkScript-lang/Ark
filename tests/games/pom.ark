{
    # jeu du plus ou moins
    (print "Jeu du plus ou moins !")

    (import "librandom.so")
    (import "Arithmetic.ark")

    (let number (mod (abs (random)) 10000))
    (print number)
    (mut value 0)
    (mut essais 0)

    (let continue true)

    (while continue {
        (set value (toNumber (input "Entrez une valeur numérique: ")))

        (if (< value number)
            # then
            (print "C'est plus !")
            # else
            (if (= value number)
                # then
                { (print "Gagné !") (set continue false) }
                # else
                (print "C'est moins !")
            )
        )

        (set essais (+ 1 essais))
    })

    (print "Vous avez gagné en" essais "essais")
}