(begin
    (let x "hello world")
    (print x)
    ' just testing if variables are correctly scoped
    (let double (fun (x) (+ x x)))
    (let b (double 21))
    (print "the answer to life is" (double 21))
    (let a 1)
    (if (= a 1) (print "a is 1") ())
    (if (= a 2) () (print "a is not 2"))
    (while (!= a 10) (begin
        '(print a)
        (set a (+ a 1))
        ))
    )
