(import tests-tools)

(let utf8-tests (fun () {
    (mut tests 0)
    (let start-time (time))

    (let ---> 15)
    (set tests (assert-eq ---> 15 "create identifier --->" tests))

    (let <-- 16)
    (set tests (assert-eq <-- 16 "create identifier <--" tests))
    (set tests (assert-val (< ---> <--) "comparing ---> and <-- with < operator" tests))

    (let emotes [
        "ğŸ¥³" "ğŸ˜…" "ğŸ˜¥" "ğŸ‘¿" "ğŸŸ¢" "ğŸ™Š"
        "ğŸ’¡" "ğŸ’»" "ğŸŒŸ" "ğŸ”¹" "ğŸŒ" "ğŸ¤–"
        "ğŸ–" "ğŸ¤”" "ğŸ¤©" "ğŸ¤ " "ğŸ˜Š"])
    (mut i 0)
    (while (< i (len emotes)) {
        (set tests (assert-eq (len (@ emotes i)) 4 "checking emotes length" tests))
        (set i (+ 1 i))})

    (set tests (assert-eq "\U0001f47f" "ğŸ‘¿" "checking conversion pattern \\U and its emote" tests))
    (set tests (assert-eq "\U0001F47F" "ğŸ‘¿" "checking conversion pattern \\U and its emote" tests))
    (set tests (assert-eq "\u1e0b" "á¸‹" "checking conversion pattern \\u and its emote" tests))
    (set tests (assert-eq "\u1E0B" "á¸‹" "checking conversion pattern \\u and its emote" tests))

    (set tests (assert-eq (str:ord "ğŸ‘º") 128122 "checking conversion emote or character to utf8 codepoint (decimal number)" tests))
    (set tests (assert-eq (str:chr 128122) "ğŸ‘º" "checking conversion codepoint to emote or character (utf8 string)" tests))
    (set tests (assert-eq (str:ord "$") 36 "checking conversion emote or character to utf8 codepoint (decimal number)" tests))
    (set tests (assert-eq (str:chr 36) "$" "checking conversion codepoint to emote or character (utf8 string)" tests))

    (recap "UTF8 tests passed" tests (- (time) start-time))

    tests }))

(let passed-utf8 (utf8-tests))
