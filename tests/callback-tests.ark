{
    (let callbacks-tests (fun () {
        (mut tests 0)

        (let egg (fun (bar) { bar }))
        (let data ["Iron Man" "is" "Tony Stark"])
        (mut callbacks [])

        (mut acc 0)
        (while (!= acc (len data)) {
            (mut d (@ data acc))
            (set callbacks (append callbacks (fun (&d) (egg d))))
            (set acc (+ 1 acc))
        })

        (set acc 0)
        (while (!= acc (len callbacks)) {
            (assert (= (@ data acc) (@ callbacks acc).d) "Callback test 1 failed")      (set tests (+ 1 tests))
            (assert (= (@ data acc) ((@ callbacks acc))) "Callback test 1°2 failed")    (set tests (+ 1 tests))
            (set acc (+ 1 acc))
        })

        (let countdown-from (fun (number)
            (fun (&number) {
                (set number (- number 1))
                number
            }))
        )
        (let countdown-from-3 (countdown-from 3))
        (assert (= 2 (countdown-from-3)) "Callback test 2 failed")                      (set tests (+ 1 tests))
        (assert (= 1 (countdown-from-3)) "Callback test 2°2 failed")                    (set tests (+ 1 tests))
        (assert (= 0 (countdown-from-3)) "Callback test 2°3 failed")                    (set tests (+ 1 tests))

        (print "  Callback tests passed \t(" tests ")")
        tests
    }))

    (let passed-callback (callbacks-tests))
}